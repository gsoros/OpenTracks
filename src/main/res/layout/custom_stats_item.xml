<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StatsCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/stats_iv_drag_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_drag_indicator_24"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/stats_custom_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/stats_custom_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/LargeLabel"
            tools:text="Stats data field"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/stats_iv_drag_indicator"
            app:layout_constraintEnd_toStartOf="@id/stats_icon_show_status"
            app:layout_constraintTop_toTopOf="@id/stats_iv_drag_indicator"
            app:layout_constraintBottom_toBottomOf="@id/stats_iv_drag_indicator" />

        <ImageView
            android:id="@+id/stats_icon_show_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_baseline_visibility_24"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/stats_custom_title"
            app:layout_constraintBottom_toBottomOf="@id/stats_custom_title"
            app:layout_constraintStart_toEndOf="@id/stats_custom_title"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>